<div class="text-center">
    <h1>Eat the Burger
    </h1>
</div>


<br>
<div class="container text-center">
    <div class="row">
        <div class="col-sm">
            <h2>Menu</h2>
            <ul>
                {{!-- {{#each burgers}} {{#unless devoured}} {{devoured=false}} {{/unless}} {{/each}}--}} {{#each burgers}} {{#unless devoured}}
                <li>{{burger_name}}</li> {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>In my Belly!</h2>
            <ul>
                {{#each burgers}} {{#if devoured}}
                <li>{{burger_name}}</li> {{/if}} {{/each}}
            </ul>
        </div>

    </div>
</div>
</div>


<!-- form -->



<br>
<h2 class="text-center">Add a Burger</h2>
<form class="create-form text-center">

    <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name" name="name" value="0">
    </div>

    <button type="submit">Add Burger to Menu</button>
</form>

<script type="text/javascript">

    $(".create-form").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        var newBurger = {
            name: $("#burger-name").val().trim(),
            devoured: $("[name=name]").val().trim()
        };

        // Send the POST request.
        $.ajax("/api/burgers", {
            type: "POST",
            data: newBurger
        }).then(
            function () {
                console.log("created new burger");
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });

</script>